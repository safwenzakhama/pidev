{% extends 'base.html.twig' %}

{% block title %}Categoryexercice index{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12 p-0">
            <div class="section-title">
                <h3>  Category exercice index <span> <a href="{{ path('categoryexercice_new') }}"><button class="btn-primary">Create new</button></a></span></h3>
            </div>
        </div>
    </div>


<div class="row">
    {% for categoryexercice in categoryexercices %}

        <div class="col-lg-3 col-sm-6 p-0">
            <div class="soccer-item set-bg" data-setbg="{{ asset( 'uploads/')}}{{ categoryexercice.photo }}" >
                <div class="si-tag">{{ categoryexercice.name }}</div>
                <div class="si-text">
                    <h5><a href="#">C{{ categoryexercice.description }}</a></h5>
                    <ul>
                        <li><i class="fa fa-calendar">
                                <a href="{{ path('categoryexercice_show', {'id': categoryexercice.id}) }}"><button class="btn-primary"> show</button></a>
                        </i>
                        </li>
                        <li><i class="fa fa-edit">
                                <a href="{{ path('categoryexercice_edit', {'id': categoryexercice.id}) }}"><button class="btn-primary">edit</button></a>
                            </i>
                    </ul>
                </div>
        </div>
        </div>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>


    {% endfor %}

</div>

{% endblock %}
