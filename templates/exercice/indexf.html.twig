{% extends 'base.html.twig' %}

{% block title %}Exercice index{% endblock %}


{% block body %}
    <div class="row">
        <div class="col-lg-12 p-0">
            <div class="section-title">
                <h3>  list  exercice  </h3>
            </div>
        </div>
    </div>


    <div class="row">
        {% for exercice in exercices %}

            <div class="col-lg-3 col-sm-6 p-0">
                <div class="soccer-item set-bg"  data-setbg="{{ asset( 'uploads/')}}{{ exercice.photo }}" >
                    <div class="si-tag">{{ exercice.name }}</div>
                    <div class="si-text">
                        <h5><a href="#">C{{ exercice.nbrset }}</a></h5>
                        <ul>
                            <li><i class="fa fa-calendar">
                                    <a href="{{ path('exercice_show', {'id': exercice.id}) }}"><button class="btn-primary"> show</button></a>
                                </i>
                            </li>
                            <li><i class="fa fa-edit">
                                    <a href="{{ path('exercice_edit', {'id': exercice.id}) }}"><button class="btn-primary">edit</button></a>
                                </i>
                        </ul>
                    </div>
                </div>
            </div>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>


        {% endfor %}

    </div>

{% endblock %}
